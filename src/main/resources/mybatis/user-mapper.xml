<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="flab.commercemarket.domain.user.mapper.UserMapper">

    <resultMap id="userResultMap" type="flab.commercemarket.domain.user.vo.User">
        <result property="phoneNumber" column="phone_number"/>
    </resultMap>

    <resultMap id="userRoleResultMap" type="flab.commercemarket.domain.user.vo.UserRole">
        <result property="userId" column="user_id"/>
    </resultMap>

    <insert id="save" parameterType="flab.commercemarket.domain.user.vo.User" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO market_user (username, password, name, address, phone_number, email)
        VALUES (#{username}, #{password}, #{name}, #{address}, #{phoneNumber}, #{email})
    </insert>

    <insert id="saveUserRole" parameterType="flab.commercemarket.domain.user.vo.UserRole" useGeneratedKeys="true"
            keyProperty="id">
        INSERT INTO user_role (user_id, authority)
        VALUES (#{userId}, #{authority})
    </insert>

    <select id="findById" parameterType="long" resultMap="userResultMap">
        SELECT * FROM market_user WHERE id = #{id}
    </select>

    <select id="findByNameAndUsername" parameterType="map" resultMap="userResultMap">
        SELECT * FROM market_user WHERE username = #{username} AND name = #{name}
    </select>

    <select id="findByUsername" parameterType="String" resultMap="userResultMap">
        SELECT * FROM market_user WHERE username = #{username}
    </select>

    <select id="findAll" resultMap="userResultMap">
        SELECT * FROM market_user
    </select>

    <select id="findRoleById" parameterType="long" resultMap="userRoleResultMap">
        SELECT * FROM user_role WHERE user_id = #{id}
    </select>

    <update id="update">
        UPDATE market_user
        SET
        username = #{user.username},
        password = #{user.password},
        name = #{user.name},
        address = #{user.address},
        phone_number = #{user.phoneNumber},
        email = #{user.email}
        WHERE
        id = #{id}
    </update>

    <update id="updateUserRole">
        UPDATE user_role SET authority = #{authority}
        WHERE user_id = #{userId}
    </update>

    <delete id="delete" parameterType="long">
        DELETE FROM market_user WHERE id = #{id}
    </delete>

    <delete id="deleteUserRole" parameterType="long">
        DELETE FROM user_role WHERE user_id = #{userId}
    </delete>
</mapper>